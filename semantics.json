                  "default": "rgb(247, 249, 54)",
                  "widget": "colorSelector",
                  "spectrum": {
                    "showInput": true,
                    "showInitial": true,
                    "preferredFormat": "rgb",
                    "showPalette": true,
                    "palette": [
                      ["rgba(247, 249, 54, 1)"],
                      ["rgba(168, 230, 207, 1)"],
                      ["rgba(220, 237, 193, 1)"],
                      ["rgba(255, 211, 182, 1)"],
                      ["rgba(255, 170, 165, 1)"],
                      ["rgba(255, 139, 148, 1)"],
                      ["rgba(255, 108, 129, 1)"]
                    ]
                  }
                },
                {
                  "name": "cardBorderColor",
                  "type": "text",
                  "label": "Border color",
                  "default": "rgb(226, 227, 45)",
                  "widget": "colorSelector",
                  "spectrum": {
                    "showInput": true,
                    "showInitial": true,
                    "preferredFormat": "rgb",
                    "showPalette": true,
                    "palette": [
                      ["rgba(226, 227, 45, 1)"],
                      ["rgba(147, 207, 185, 1)"],
                      ["rgba(199, 214, 169, 1)"],
                      ["rgba(235, 189, 161, 1)"],
                      ["rgba(235, 148, 143, 1)"],
                      ["rgba(235, 117, 126, 1)"],
                      ["rgba(235, 86, 107, 1)"]
                    ]
                  }
                },
                {
                  "name": "cardRating",
                  "type": "number",
                  "label": "Card rating",
                  "importance": "low",
                  "description": "Rating of the card.",
                  "default": 0,
                  "min": 0,
                  "max": 5,
                  "step": 1
                }
              ]
            },
            {
              "name": "cardCapabilities",
              "type": "group",
              "label": "Capabilities for card",
              "importance": "low",
              "fields": [
                {
                  "name": "canUserEditCard",
                  "type": "boolean",
                  "label": "Can user edit card",
                  "importance": "low",
                  "default": true
                },
                {
                  "name": "canUserMoveCard",
                  "type": "boolean",
                  "label": "Can user move card",
                  "importance": "low",
                  "default": true
                },
                {
                  "name": "canUserResizeCard",
                  "type": "boolean",
                  "label": "Can user resize card",
                  "importance": "low",
                  "default": true
                },
                {
                  "name": "canUserDeleteCard",
                  "type": "boolean",
                  "label": "Can user delete card",
                  "importance": "low",
                  "default": true
                },
                {
                  "name": "canUserRateCard",
                  "type": "boolean",
                  "label": "Can user rate card",
                  "importance": "low",
                  "description": "If enabled, the user can rate the card.",
                  "default": false
                }
              ]
            }
          ]
        }
      },
      {
        "name": "backgroundSettings",
        "label": "Background",
        "type": "group",
        "importance": "high",
        "fields": [
          {
            "name": "backgroundImage",
            "type": "image",
            "label": "Background image",
