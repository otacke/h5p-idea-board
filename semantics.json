  {
    "name": "board",
    "label": "Idea board",
    "type": "group",
    "importance": "high",
    "fields": [
      {
        "name": "cards",
        "type": "list",
        "label": "Cards",
        "entity": "card",
        "importance": "high",
        "field": {
          "name": "card",
          "type": "group",
          "label": "Card",
          "fields": [
            {
              "name": "id",
              "type": "text",
              "label": "ID"
            },
            {
              "name": "telemetry",
              "type": "group",
              "label": "Telemetry",
              "importance": "low",
              "fields": [
                {
                  "name": "x",
                  "type": "text"
                },
                {
                  "name": "y",
                  "type": "text"
                },
                {
                  "name": "height",
                  "type": "text"
                },
                {
                  "name": "width",
                  "type": "text"
                }
              ]
            },
            {
              "name": "contentType",
              "type": "library",
              "label": "Content type",
              "importance": "high",
              "options": [
                "H5P.EditableText 1.0",
                "H5P.EditableMedium 1.0"
              ]
            },
            {
              "name": "cardBackgroundColor",
              "type": "text",
              "label": "Card background color",
              "default": "rgb(255, 255, 137)",
              "widget": "colorSelector",
              "spectrum": {
                "showInput": true,
                "showInitial": true,
                "preferredFormat": "rgb"
              }
            },
            {
              "name": "cardBorderColor",
              "type": "text",
              "label": "Card border color",
              "default": "rgb(255, 235, 138)",
              "widget": "colorSelector",
              "spectrum": {
                "showInput": true,
                "showInitial": true,
                "preferredFormat": "rgb"
              }
            },
            {
              "name": "cardCapabilities",
              "type": "group",
              "label": "Capabilities for card",
              "importance": "low",
              "fields": [
                {
                  "name": "canUserRateCard",
                  "type": "boolean",
                  "label": "Can user rate card",
                  "importance": "low",
                  "description": "If enabled, the user can rate the card.",
                  "default": false
                },
                {
                  "name": "cardRating",
                  "type": "number",
                  "label": "Card rating",
                  "importance": "low",
                  "description": "Rating of the card.",
                  "default": 0,
                  "min": 0,
                  "max": 5,
                  "step": 1,
                  "widget": "showWhen",
                  "showWhen": {
                    "rules": [
                      {
                        "field": "canUserRateCard",
                        "equals": true
                      }
                    ]
                  }
                }
              ]
            }
          ]
        }
      },
      {
        "name": "backgroundSettings",
        "label": "Background",
        "type": "group",
        "importance": "high",
        "fields": [
          {
            "name": "backgroundImage",
            "type": "image",
            "label": "Background image",
            "optional": true
          },
          {
            "name": "backgroundColor",
            "type": "text",
            "label": "Background color",
            "default": "rgb(255, 255, 255)",
            "widget": "colorSelector",
            "spectrum": {
              "showInput": true,
              "showInitial": true,
              "preferredFormat": "rgb"
            }
          }
        ]
      }
    ]
  },
  {
