[
  {
    "name": "textualInput",
    "type": "group",
    "label": "Textual input",
    "importance": "low",
    "fields": [
      {
        "name": "input",
        "type": "text",
        "label": "List of cards",
        "optional": true,
        "widget": "textarea",
        "placeholder": "Raspberries\n\nStrawberries (yummie)\n\nBlueberries"
      },
      {
        "name": "dummy",
        "type": "text",
        "label": "Dummy",
        "optional": true,
        "widget": "none"
      }
    ],
    "widget": "textualInputIdeaBoard",
    "textualInput": {
      "textarea": "input",
      "editor": "board"
    }
  },
  {
    "name": "headline",
    "type": "text",
    "label": "Headline",
    "optional": true
  },
  {
    "name": "board",
    "label": "Idea board",
    "type": "group",
    "widget": "ideaboard",
    "importance": "high",
    "fields": [
      {
        "name": "cards",
        "type": "list",
        "label": "Cards",
        "entity": "card",
        "importance": "high",
        "field": {
          "name": "card",
          "type": "group",
          "label": "Card",
          "fields": [
            {
              "name": "id",
              "type": "text",
              "label": "ID",
              "widget": "none"
            },
            {
              "name": "telemetry",
              "type": "group",
              "label": "Telemetry",
              "importance": "low",
              "widget": "none",
              "fields": [
                {
                  "name": "x",
                  "type": "text"
                },
                {
                  "name": "y",
                  "type": "text"
                },
                {
                  "name": "height",
                  "type": "text"
                },
                {
                  "name": "width",
                  "type": "text"
                }
              ]
            },
            {
              "name": "contentType",
              "type": "library",
              "label": "Content type",
              "importance": "high",
              "options": [
                "H5P.EditableText 1.1",
                "H5P.EditableMedium 1.1"
              ]
            },
            {
              "name": "cardSettings",
