          {
            "name": "addableTypeAudio",
            "type": "boolean",
            "label": "Audio"
          },
          {
            "name": "addableTypeVideo",
            "type": "boolean",
            "label": "Video"
          }
        ],
        "widget": "showWhen",
        "showWhen": {
          "rules": [
            {
              "field": "userCanAddCards",
              "equals": true
            }
          ]
        }
      }
    ]
  },
